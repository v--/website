{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm --recursive --force private public",
    "build": "npm run clean && npm run lint && npm run test && tsx code/build/builder.ts",
    "client": "tsx code/build/watcher.ts",
    "server": "tsx --watch code/server/index.ts",
    "lint": "tsc --project . --noEmit && eslint --ext js,ts,d.ts code",
    "test": "mocha",
    "unimported": "unimported --show-unused-files",
    "favicon": "convert -background transparent client/svg/favicon.svg -resize 64x64 client/assets/images/favicon.png"
  },
  "dependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/browser-sync": "^2.29.0",
    "@types/chai": "^4.3.12",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "benchmark": "^2.1.4",
    "browser-sync": "^3.0.2",
    "chai": "^5.1.0",
    "chokidar": "^3.6.0",
    "es-observable-tests": "^0.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.1",
    "eslint-plugin-node": "^11.1.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "sass": "^1.72.0",
    "svgo": "^v3.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "unimported": "^1.31.0"
  },
  "mocha": {
    "extension": ["ts"],
    "node-option": ["import=tsx"],
    "spec": "code/**/test_*.ts"
  }
}
