{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semi": ["warn", "never"],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-var": "warn",
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "no-console": ["error", { "allow": ["error"] }],
    "space-before-function-paren": ["warn", "never"],
    "no-restricted-syntax": [
      "warn",
      {
        "selector": "ExportDefaultDeclaration",
        "message": "Usage of default exports is discouraged"
      },
      {
        "selector": "NewExpression[callee.name='Error']",
        "message": "Please subclass CoolError instead of using the built-it Error class"
      },
      {
        "selector": "NewExpression[callee.name='CoolError']",
        "message": "Please subclass CoolError instead of instantiating it directly"
      }
    ],
    "@typescript-eslint/ban-types": ["off"],
    "@typescript-eslint/no-empty-interface": ["off"],
    "@typescript-eslint/no-non-null-assertion": ["off"],
    "@typescript-eslint/no-unused-vars": ["off"],
    "@typescript-eslint/explicit-module-boundary-types": ["off"],
    "@typescript-eslint/no-this-alias": ["off"]
  }
}
