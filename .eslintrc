parserOptions:
  ecmaVersion: 2017

extends:
  - eslint:recommended

env:
  es6: true

globals:
  require: true
  module: true

rules:
  semi:
    - error
    - always

  no-unused-vars:
    - warn
    - vars: "all"
      args: "all"
      argsIgnorePattern: "^_"

  quotes:
    - warn
    - single
    - avoidEscape: true
