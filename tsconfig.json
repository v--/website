{
  "include": [
    "./code/**/*.ts",
    "./code/**/*.js",
    "./code/types/**/*.d.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./public/code",
    "allowJs": true,
    "checkJs": true,
    "lib": ["DOM"],
    "removeComments": false,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./code/types"]
  }
}
