{
  "include": [
    "./code/**/*.js",
    "./code/**/*.d.ts",
    "./code/**/*.js",
    "./benchmarks/**/*.js",
    "./tests/**/*.js",
    "./tests/**/*.ts",
    "./build/**/*.js"
  ],
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "lib": ["DOM"],
    "removeComments": false,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./code/types"]
  }
}
