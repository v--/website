{
  "include": [
    "./code/**/*.js",
    "./code/types/**/*.d.ts",
    "./benchmarks/**/*.js",
    "./tests/**/*.js",
    "./build/**/*.js"
  ],
  // Avoid checking svgo
  "exclude": [
    "./build/watcher.js",
    "./build/builder.js",
    "./build/svg.js"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["DOM"],
    "removeComments": false,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./code/types"]
  }
}
