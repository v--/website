{
  "include": ["./code"],
  "exclude": ["./node_modules", "./public"],
  "compilerOptions": {
    "noEmit": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "ESNext"],
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noImplicitAny": true,
    "erasableSyntaxOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
